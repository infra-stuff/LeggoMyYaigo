{
    "compilerOptions": {
        "outDir": "dist",
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "scripts/**/*"],
    "exclude": [
        "node_modules",
        "node_modules/*",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}
